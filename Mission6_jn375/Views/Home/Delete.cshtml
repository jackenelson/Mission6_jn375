
@{
    ViewData["Title"] = "Delete Movie";
}

@model ModelClass
<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.Title</h3>

<form method="post" action="delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Index3" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieId"/>
</form>